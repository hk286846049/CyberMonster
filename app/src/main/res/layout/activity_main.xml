<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEF1FF"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_marginBottom="110dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/shape_bg_a"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_a"
            android:layout_marginStart="20dp"
            android:src="@drawable/home_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="28dp"
            android:layout_height="64dp"/>
        <TextView
            android:id="@+id/tv_a"
            android:text="筑基"
            android:textColor="@color/color_252525"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/iv_a"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="64dp" />
        <ImageView
            android:id="@+id/iv_b"
            app:layout_constraintEnd_toStartOf="@+id/tv_b"
            android:src="@drawable/home_4"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="28dp"
            android:layout_height="64dp"/>
        <TextView
            android:id="@+id/tv_b"
            android:text="结丹"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="64dp" />
        <ImageView
            android:id="@+id/iv_c"
            android:layout_marginEnd="5dp"
            android:src="@drawable/home_5"
            app:layout_constraintEnd_toStartOf="@+id/tv_c"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="28dp"
            android:layout_height="64dp"/>
        <TextView
            android:id="@+id/tv_c"
            android:text="飞升"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="64dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>